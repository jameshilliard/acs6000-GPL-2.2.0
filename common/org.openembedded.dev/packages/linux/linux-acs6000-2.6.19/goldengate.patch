+	else {
+#ifdef CONFIG_ROOT_NFS
+		ROOT_DEV = Root_NFS;
+#else
+		ROOT_DEV = Root_HDA1;
+#endif
+	}
+#endif
+
+	goldengate_early_serial_map();
+
+	/* Identify the system */
+	printk("Avocent " BOARDNAME " Platform\n");
+}
