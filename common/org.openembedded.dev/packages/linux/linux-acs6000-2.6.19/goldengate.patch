+static struct ctl_table board_dir_table[] =
+{
+	{
+		.ctl_name = CTL_POWERSTATUS1,
+		.procname = "power1",
+		.maxlen = sizeof(int),
+		.data = (void *)0x00000800L,
+		.mode = 0644,
+		.proc_handler = &proc_handle_gpioread,
+	},
+	{
+		.ctl_name = CTL_POWERSTATUS2,
+		.procname = "power2",
+		.maxlen = sizeof(int),
+		.data = (void *)0x00000400L,
+		.mode = 0644,
+		.proc_handler = &proc_handle_gpioread,
+	},
+	{
+		.ctl_name = CTL_BUZZER,
+                .procname = "buzzer",
+		.maxlen = sizeof(int),
+                .mode = 0644,
+                .proc_handler = proc_handle_buzzer,
+        },
+	{
+		.ctl_name = CTL_PINOUT,
+                .procname = "pinout",
+                .mode = 0555,
+                .child = pinout_dir_table,
+        },
+	{
+		.ctl_name = CTL_LED,
+                .procname = "led",
+		.maxlen = sizeof(int),
+                .mode = 0644,
+                .proc_handler = proc_handle_led,
+	},
+	{
+		.ctl_name = CTL_CISCO,
+                .procname = "cisco",
+		.maxlen = sizeof(int),
+                .mode = 0644,
+                .proc_handler = proc_handle_cisco,
+	},
