+				string = "48";
+				break;
+			default:
+				string = "0";
+				break;
+		}
+		if (copy_to_user(buffer, string, sizeof(int))) {
+			return -EFAULT;
+		}
+		*lenp = sizeof(int);
+		*ppos += sizeof(int);
+	}
